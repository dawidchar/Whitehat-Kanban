<div class="container">
    <h2 class="mb-4">Sign Up</h2>
    {{!-- action="/api/users" method="POST" --}}
    <form onsubmit="return signup(event)">

        <p class="input-field">
            <i class="fas fa-user-circle"></i>&nbsp;
            <input id="signup-name" name="name" type="text" pattern="^(?=[a-zA-Z]{3,20}$)" placeholder="Name" required>
        </p>
        <p class="input-field">
            <i class="fas fa-user"></i>&nbsp;
            <input id="signup-username" name="username" type="text" pattern="^(?=[a-zA-Z0-9._]{5,20}$)(?!.*[_.]{2})[^_.].*[^_.]$" title="5-20 Characters \n A-Z 9-0 _ allowed" placeholder="Username" required>
        </p>
        <p class="input-field">
            <i class="fa fa-portrait"></i>&nbsp;
            <input id="signup-avatar" name="avatar" type="url" placeholder="Avatar URL" required>
        </p>

        {{!-- <p class="input-field">
            <i class="fas fa-lock"></i>&nbsp;
            <input type="password" placeholder="Password" required>  
        </p> --}}
        <p><button type="submit" class="loginbutton btn"> Sign Up</button></p>
        <p>Already have an account? Log in
            <a onclick="event.preventDefault();app.run('login')" class="login-btn" href="/">
                here</a>!</p>
    </form>
</div>
